    "state": { "type": "string", "description": "State / region (e.g. Kerala, Texas)" },
    "postalCode": { "type": "string", "description": "PIN / ZIP" },
    "country": { "type": "string", "description": "Country (India, USA, etc.)" },
    "phones": { "type": "text", "description": "Phone number(s), comma-separated" },
    "phoneSecondary": { "type": "string", "description": "Second phone number" },
    "email": { "type": "string" },
    "website": { "type": "string" },
    "image": { "type": "media", "multiple": false, "required": false, "allowedTypes": ["images"] },
    "diocese": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::diocese.diocese",
